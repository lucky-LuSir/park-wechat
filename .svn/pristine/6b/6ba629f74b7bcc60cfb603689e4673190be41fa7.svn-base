<!--pages/login/login.wxml-->
<view class='wx-root'>
  <image src='/assets/images/wx.png' class="login-icon"></image>
  <button open-type="getPhoneNumber" bindgetphonenumber="wxLogin" class='wx-login-button' type="primary">
    微信登录
  </button>

</view>
<view class="phone-root">
  <view class="phone-login">
    <image src='/assets/images/phone.png' class="login-icon">
    </image>
    <button class="wx-login-button" plain bindtap="phoneLogin">手机登录</button>
  </view>
</view>